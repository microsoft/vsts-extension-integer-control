// Modern task runner configuration for webpack-based build
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "npm",
            "script": "build",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build:release", 
            "type": "npm",
            "script": "build:release",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "test",
            "type": "npm", 
            "script": "test",
            "problemMatcher": "$tsc",
            "group": "test"
        },
        {
            "label": "package-dev",
            "type": "npm",
            "script": "package-dev", 
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "package-release",
            "type": "npm",
            "script": "package-release",
            "problemMatcher": "$tsc", 
            "group": "build"
        }
    ]
}