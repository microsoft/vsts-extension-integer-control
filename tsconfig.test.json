{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "rootDir": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node", 
            "mocha",
            "chai"
        ],
        "lib": [
            "dom",
            "es2020"
        ]
    },
    "include": [
        "test/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
